<div class="container mt-5">
 <h5>R4H Visualization Dashboard - EID/VIRAL LOAD DATA</h5>
    <div class="row">
        <a href="<%= url_for(action: 'total_orders', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Samples Drawn</h6>
                    <p class="card-text"><%= @orders %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'uncollected_orders', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Samples Awaiting Pick up</h6>
                    <p class="card-text"><%= @orders - @orders_collected %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'orders_collected', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Samples Picked up</h6>
                    <p class="card-text"><%= @orders_collected %></p>
                </div>
            </div>
        </a>
         <a href="<%= url_for(action: 'orders_delivered_at_dho', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Samples Delivered At District Hub</h6>
                    <p class="card-text"><%= @orders_delivered_at_dho %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'orders_delivered_at_molecular_lab', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Samples Delivered At Molecular Lab</h6>
                    <p class="card-text"><%= @orders_delivered_at_molecular %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'results_ready_at_molecular', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Results Ready At Molecular Lab</h6>
                    <p class="card-text"><%= @results_ready_at_molecular %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'emr_ack', controller: 'r4h', only_path: false) %>" >
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Results delivered to EMR electronically </h6>
                    <p class="card-text"><%= @result_delivered_to_emr_electronically %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'dispatched_results_at_molecular', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Results Dispatched From Molecular Lab</h6>
                    <p class="card-text"><%= @dispatch_results_at_molecular %></p>
                </div>
            </div>
        </a>
        <a href="<%= url_for(action: 'dispatched_results_at_molecular', controller: 'r4h', only_path: false) %>">
            <div class="card m-2" style="width: 20rem;">
                <div class="card-body">
                    <h6 class="card-title">Total Results Delivered To Facility</h6>
                    <p class="card-text"><%= @dispatch_results_at_molecular %> </p>
                </div>
            </div>
        </a>
    </div>
</div>

<style>
    a{
      color: black;  
    }
    a:hover {
        text-decoration: none;
        color: black;
    }
    h6,p{
        text-align: center;
    }
    p{
        font-weight: bold;
        font-size: 20px;
    }
    div.card {
        width: 250px;
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.2), 0 2px 18px 0 rgba(0, 0, 0, 0.19);
        text-align: center;
    }
    div.card:hover {
        width: 250px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        text-align: center;
    }
</style>